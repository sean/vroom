<div id="note">
  <header>
    <h1><%= link_to @person.name, @person %></h1>
  </header>
  <header>
    <h2><%= @note.details %></h2>
    <ul class="actions">
      <li><%= link_to "Edit Note", [:edit, @person, @note],
              class: "edit" %></li>
      <li><%= link_to "Delete Note", [@person, @note], method: :delete,
              data: { confirm: "Are you sure you want to delete this note?"},
              class: "delete" %></li>
    </ul>
  </header>
  <%= @note.created_at %>
</div>