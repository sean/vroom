<% title(@person.name, "People") %>
<header>
  <h1><%= @person.name %></h1>
  <h3><%= @person.title %></h3>  
  <ul class="actions">
    <li><%= link_to "Edit Person", edit_person_path(@person), class: "edit" %></li>
    <li><%= link_to "Delete Person",
            person_path(@person),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this person?" },
            class: "delete" %></li>
  </ul> 
</header>

<header>
  <h2>Notes</h2>
    <ul class="actions">
      <li><%= link_to "New Note", new_person_note_path(@person),
              class: "new" %></li>
    </ul>
</header>

<ul id="notes">
  <% @person.notes.each do |n| %>
  <li>#<%= n.id %> -
    <%= link_to n.details, [@person, n] %>
  </li>
  <% end %>
</ul>